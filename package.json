{
  "name": "kubernator",
  "displayName": "Kubernator",
  "description": "Kubernetes object tree editor",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:kube",
    "onView:kubernator.treeView",
    "onCommand:kubernator.create",
    "onCommand:kubernator.clean"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kubernator",
          "title": "Kubernator",
          "icon": "assets/kubernator.svg"
        }
      ]
    },
    "views": {
      "kubernator": [
        {
          "id": "kubernator.treeView",
          "name": "Kubernator"
        }
      ]
    },
    "commands": [
      {
        "command": "kubernator.refresh",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "Kubernator"
      },
      {
        "command": "kubernator.delete",
        "title": "Delete",
        "icon": "$(trash)",
        "category": "Kubernator"
      },
      {
        "command": "kubernator.create",
        "title": "Create object from active editor",
        "icon": "$(save)",
        "category": "Kubernator"
      },
      {
        "command": "kubernator.clean",
        "title": "Clean object in active editor",
        "category": "Kubernator"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "kubernator.create",
          "when": "editorLangId == yaml"
        },
        {
          "command": "kubernator.clean",
          "when": "editorLangId == yaml"
        }
      ],
      "view/title": [
        {
          "command": "kubernator.refresh",
          "when": "view == kubernator.treeView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "kubernator.refresh",
          "when": "view == kubernator.treeView && viewItem != 'object' && viewItem != 'error'",
          "group": "inline"
        },
        {
          "command": "kubernator.delete",
          "when": "view == kubernator.treeView && viewItem == 'object'"
        }
      ]
    },
    "configuration": [
      {
        "title": "Kubernator",
        "properties": {
          "kubernator.apiURL": {
            "type": "string",
            "default": "http://localhost:8001"
          },
          "kubernator.excludeEmpty": {
            "type": "boolean",
            "default": true
          },
          "kubernator.expandCoreGroup": {
            "type": "boolean",
            "default": true
          },
          "kubernator.expandUndottedGroups": {
            "type": "boolean",
            "default": true
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/node-fetch": "^2.5.10",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "node-fetch": "^2.6.1",
    "yaml": "^1.10.2"
  }
}
